{
    "experimentalTernaries": false,
    "printWidth": 130,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "endOfLine": "auto",
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "parser": "html",
                "singleAttributePerLine": true
            }
        },
        {
            "files": "*.component.html",
            "options": {
                "parser": "angular",
                "singleAttributePerLine": true
            }
        }
    ]
}
